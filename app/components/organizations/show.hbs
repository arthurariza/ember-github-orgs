<div>
  <img
    src={{@organization.avatar_url}}
    alt='Organization'
    data-target-org-show-image
  />
  <div>
    <h1 data-target-org-show-name>
      {{@organization.name}}
    </h1>
    <a
      href={{@organization.html_url}}
      target='_blank'
      rel='noopener noreferrer'
      data-target-org-show-html-url
    >
      See On Github
    </a>
    <LinkTo
      @route='organizations.repositories'
      @model={{@organization.login}}
      data-target-org-show-repo-link
    >
      Show Repositories
    </LinkTo>
  </div>
</div>
