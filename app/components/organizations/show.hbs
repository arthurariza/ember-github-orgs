<div class='show'>
  <div class='show__image-container'>
    <img
      src={{@organization.avatar_url}}
      alt='Organization'
      class='show__image'
      data-test-org-show-image
    />
  </div>
  <div class='show__details'>
    <h2 class='show__name' data-test-org-show-name>
      {{@organization.name}}
    </h2>

    <a
      href={{@organization.html_url}}
      target='_blank'
      rel='noopener noreferrer'
      class='show__github-link'
      data-test-org-show-html-url
    >
      See On Github
    </a>

    <LinkTo
      @route='organizations.repositories'
      @model={{@organization.login}}
      class='show__repositories-link'
      data-test-org-show-repo-link
    >
      Show Repositories
    </LinkTo>
  </div>
</div>
